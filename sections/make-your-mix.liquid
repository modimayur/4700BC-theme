{{ 'section-bundle.css' | asset_url | stylesheet_tag }}

{{ 'component-tab.css' | asset_url | stylesheet_tag }}
<script src="{{ 'tab.js' | asset_url }}" defer="defer"></script>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="bundle-wrapper">
  <div
    class="page-width section-{{ section.id }}-padding isolate{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
    {% if settings.animations_reveal_on_scroll %}
      data-cascade
    {% endif %}
  >
    {%- unless section.settings.title == blank -%}
      <div class="title-wrapper-with-link center title-wrapper--self-padded-mobile title-wrapper--no-top-margin multicolumn__title">
        <h2 class="title inline-richtext {{ section.settings.heading_size }}">
          {{ section.settings.title }}
        </h2>
      </div>
    {%- endunless -%}
    <div class="bundle-container">
      <div class="grid">
        <div class="grid__item bundle__collection-list">
          <tab-content class="tab-container">
            <div class="tab-container-wrapper animate--slide-in scroll-trigger">
              <div class="tab-list">
                <ul class="tabs">
                  {% for block in section.blocks %}
                    {% if block.settings.collection != blank %}
                      {% assign tab_title = block.settings.title | default: collections[block.settings.collection].title %}
                      <li>
                        <button data-tab="tab-{{ forloop.index }}-{{ collections[block.settings.collection].handle }}" data-handle="{{ collections[block.settings.collection].handle }}" class="tab-button tab-switcher-button {% if forloop.first %}active{% endif %}">{{ tab_title }}</button>
                      </li>
                    {% endif %}
                  {% endfor %}
                </ul>
              </div>
              <div class="tab-list-content tab-content">
                {% for block in section.blocks %}
                  {% if block.settings.collection != blank %}
                    <div class="product-list-wrapper tab-data-content {% if forloop.first %}active{% endif %}" id="tab-{{ forloop.index }}-{{ collections[block.settings.collection].handle }}">
                      <div class="grid grid--{{ section.settings.columns_desktop }}-col-desktop grid--{{ section.settings.columns_mobile }}-col-tablet-down">
                        {% for product in collections[block.settings.collection].products %}
                          <div class="grid__item">
                            {% render 'bundle-product-block', product: product %}
                          </div>
                        {% endfor %}
                      </div>
                    </div>
                  {% endif %}
                {% endfor %}
              </div>
            </div>
          </tab-content>
        </div>
        <div class="grid__item bundle__added-product-list">
          <div class="bundle__added-area animate--slide-in scroll-trigger">
            <div class="bundle__header center">
              <h3 class="right-title animate--slide-in scroll-trigger">{{ section.settings.right_title }}</h3>
              <div class="bundle-progress-bar-wrapper">
                {% assign limit = section.settings.amount_limit | times: 100 | money_with_currency %}
                <span class="bundle-progress-bar" 
                  data-price-limit="{{ section.settings.amount_limit | times: 100 }}" 
                  data-below-limit-text="{{ section.settings.below_text }}"
                  data-reached-limit-text="{{ section.settings.reached_text }}"
                ></span>
              </div>
              <div class="right-info animate--slide-in scroll-trigger">
                <p>{{ section.settings.below_text | split:'amount' | first }} <strong>{{ limit }}</strong> {{ section.settings.below_text | split:'amount' | last }}</p>
              </div>
            </div>
            <div class="bundle__content">
              <div class="bundle__list center">
                {% assign counter = 1 %}
                <p class="packs-info">8 Pack</p>
                <div class="bundle-product-list">
                  {% for i in (1..8) %}
                    <div class="item-block" data-index="{{ counter }}">
                      
                    </div>
                    {% assign counter = counter | plus: 1 %}
                  {% endfor %}
                </div>
                <p class="packs-info">10 Pack or 12 Pack</p>
                <div class="bundle-product-list">
                  {% for i in (1..4) %}
                    <div class="item-block" data-index="{{ counter }}">
                      
                    </div>
                    {% assign counter = counter | plus: 1 %}
                  {% endfor %}
                </div>
              </div>
              {% assign total = 0 %}
              <div class="bundle__footer">
                <div class="bundle__footer-total center">
                  <span>Your Total</span>
                  <h3>{{ total | money_with_currency }}</h3>
                </div>
                <div class="bundle-form-wrapper">
                  <quantity-input class="quantity">
                    <button class="quantity__button" name="minus" type="button">
                      <span class="visually-hidden">
                        {{- 'products.product.quantity.decrease' | t: product: product.title | escape -}}
                      </span>
                      {% render 'icon-minus' %}
                    </button>
                    <input
                      class="quantity__input"
                      type="number"
                      name="quantity"
                      id="Quantity-{{ section.id }}"
                      value="1"
                    >
                    <button class="quantity__button" name="plus" type="button">
                      <span class="visually-hidden">
                        {{- 'products.product.quantity.increase' | t: product: product.title | escape -}}
                      </span>
                      {% render 'icon-plus' %}
                    </button>
                  </quantity-input>
                  <div class="button-wrapper">
                    <button
                      type="button"
                      class="button button--full-width button--primary"
                    >
                      {{ 'products.product.add_to_cart' | t }}
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "Make Your Own Mix",
    "class": "section make-your-mix",
    "settings": [
      {
        "type": "inline_richtext",
        "id": "title",
        "default": "t:sections.multicolumn.settings.title.default",
        "label": "t:sections.multicolumn.settings.title.label"
      },
      {
        "type": "select",
        "id": "heading_size",
        "options": [
          {
            "value": "h2",
            "label": "t:sections.all.heading_size.options__1.label"
          },
          {
            "value": "h1",
            "label": "t:sections.all.heading_size.options__2.label"
          },
          {
            "value": "h0",
            "label": "t:sections.all.heading_size.options__3.label"
          },
          {
            "value": "hxl",
            "label": "t:sections.all.heading_size.options__4.label"
          },
          {
            "value": "hxxl",
            "label": "t:sections.all.heading_size.options__5.label"
          }
        ],
        "default": "h1",
        "label": "t:sections.all.heading_size.label"
      },
      {
        "type": "range",
        "id": "columns_desktop",
        "min": 1,
        "max": 6,
        "step": 1,
        "default": 3,
        "label": "t:sections.main-list-collections.settings.columns_desktop.label"
      },
      {
        "type": "header",
        "content": "Right Content"
      },
      {
        "type": "text",
        "id": "right_title",
        "label": "Title",
        "default":"Title"
      },
      {
        "type": "text",
        "id": "amount_limit",
        "label": "Amount Limit"
      },
      {
        "type": "textarea",
        "id": "below_text",
        "label": "Below Limit Text",
        "info": "use amount to show the amount in info"
      },
      {
        "type": "textarea",
        "id": "reached_text",
        "label": "Limit Reached Text",
        "info": "use amount to show the amount in info"
      },
      {
        "type": "header",
        "content": "t:sections.main-list-collections.settings.header_mobile.content"
      },
      {
        "type": "select",
        "id": "columns_mobile",
        "options": [
          {
            "value": "1",
            "label": "t:sections.main-list-collections.settings.columns_mobile.options__1.label"
          },
          {
            "value": "2",
            "label": "t:sections.main-list-collections.settings.columns_mobile.options__2.label"
          }
        ],
        "default": "2",
        "label": "t:sections.main-list-collections.settings.columns_mobile.label"
      },
      {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      },
      {
        "type": "text",
        "label": "Custome Class",
        "id": "custome_class"
      }
    ],
    "blocks": [
      {
        "type": "collection",
        "name":"Collection",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          },
          {
            "type": "collection",
            "id": "collection",
            "label": "Collection"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Make Your Own Mix"
      }
    ]
  }
{% endschema %}