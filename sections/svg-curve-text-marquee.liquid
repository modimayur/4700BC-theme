<style>
  .ts-homepage-marquee.homepage-marquee {
    overflow: hidden;
    position: relative;
    margin-top: -25px;
    margin-bottom: -25px;
    z-index: 1;
  }
  #CustomMarquee {
    --pt: px;
    --pb: px;
  }
  .marquee-wave .wrapper--full {
    overflow: hidden;
    position: relative;
  }
  .marquee-wave .wrapper--full:before{
    content: '';
    position: absolute;
    inset: 0 0 50%;
    background: {{ section.settings.sectionn_before_color}};
    display: block;
    z-index: 0;
  }
  .marquee-wave .wrapper--full:after{
    content: '';
    position: absolute;
    inset: 50% 0 0 ;
    background: {{ section.settings.sectionn_after_color}};
    background: rgba(var(--main-background-color),1);
    background: var(--main-background-color);
    display: block;
    z-index: 0;
  }
  .wrapper--full {
    width: 100%;
    margin: 0 auto;
    padding: 0;
    max-width: 100%;
  }
  .marquee-wave svg {
    display: block;
    position: relative;
    z-index: 1;
  }
  svg:not(:root) {
    overflow: hidden;
  }
  .wrapper--full:after {
    content: '';
    display: table;
    clear: both;
  }
    .marquee-wave,
  .marquee-wave text,
  .marquee-wave textpath {
    font-size: 7.6rem;
    font-family: var(--font-heading-family);
    font-style: var(--font-heading-style);
    font-weight: var(--font-heading-weight);
    letter-spacing: calc(var(--font-heading-scale) * 0.06rem);
    line-height: calc(1 + 0.3 / max(1, var(--font-heading-scale)));
  }
  .wrapper--full:after {
    content: '';
    display: table;
    clear: both;
  }
  #CustomMarquee .st0 {
    fill: #f6dada;
    fill: {{  section.settings.background_color}};
    stroke-width: {{ section.settings.border-width }}px;
    stroke: {{ section.settings.border_color}};
  }
  .st1 {
    fill: none;
  }
  #CustomMarquee text {
    fill: {{  section.settings.color}};
  }

  @media (min-width: 480px) {
    .ts-homepage-marquee.homepage-marquee {
      margin-top: -100px;
      margin-bottom: -100px;
      z-index: 1;
    }
  }
</style>
