{{ 'component-social-section.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="featured-recipes-container page-width">
  <div class="isolate section-{{ section.id }}-padding">
    <h2
        class="inline-richtext heading {{ section.settings.heading_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
        {{ section.shopify_attributes }}
        {% if settings.animations_reveal_on_scroll %}
          data-cascade
          style="--animation-order: 1;"
        {% endif %}
      >
        {{ section.settings.heading }}
    </h2>

    <div class="blog-articles recipes featured-recipes-slider-container">
      <div class="featured-recipes-slider">
        {% if section.blocks.size > 0 %}
          {% for block in section.blocks %}
            {% assign article = block.settings.article %}
            <div
              class="blog-articles__article article{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
              {% if settings.animations_reveal_on_scroll %}
                data-cascade
                style="--animation-order: {{ forloop.index }};"
              {% endif %}
            >
              {%- render 'article-card-recipe',
                article: article,
                media_height: section.settings.image_height,
                media_aspect_ratio: article.image.aspect_ratio,
                show_image: section.settings.show_image,
                show_date: section.settings.show_date,
                show_author: section.settings.show_author,
                show_excerpt: true
              -%}
            </div>
          {% endfor %}
        {% else %}
          
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% schema  %}
  {
    "name": "Featured Recipes Slider",
    "class": "shopify-section",
    "settings": [
      {
          "type": "richtext",
          "id": "heading",
          "label": "Heading"
      },
      {
          "type": "select",
          "id": "heading_size",
          "options": [
              {
              "value": "h2",
              "label": "t:sections.all.heading_size.options__1.label"
              },
              {
              "value": "h1",
              "label": "t:sections.all.heading_size.options__2.label"
              },
              {
              "value": "h0",
              "label": "t:sections.all.heading_size.options__3.label"
              },
              {
              "value": "hxl",
              "label": "t:sections.all.heading_size.options__4.label"
              },
              {
              "value": "hxxl",
              "label": "t:sections.all.heading_size.options__5.label"
              },
              {
                  "value": "custom",
                  "label": "Custom"
              }
          ],
          "default": "h1",
          "label": "t:sections.all.heading_size.label"
      },
      {
          "type": "range",
          "id": "padding_top",
          "min": 0,
          "max": 100,
          "step": 4,
          "unit": "px",
          "label": "t:sections.all.padding.padding_top",
          "default": 40
      },
      {
          "type": "range",
          "id": "padding_bottom",
          "min": 0,
          "max": 100,
          "step": 4,
          "unit": "px",
          "label": "t:sections.all.padding.padding_bottom",
          "default": 52
      }
    ],
    "blocks": [
      {
        "type": "recipe",
        "name":"Recipe",
        "settings": [
          {
            "type": "article",
            "id":"article",
            "label": "Recipe"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Featured Recipes Slider"
      }
    ]
  }
{% endschema %}
